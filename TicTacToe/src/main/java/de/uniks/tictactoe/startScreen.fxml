<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="bg" prefHeight="500.0" prefWidth="500.0" style="-fx-background-color: #333333;" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.tictactoe.StartScreenController">
   <children>
      <VBox fx:id="mainStack" alignment="CENTER" prefHeight="500.0" prefWidth="500.0" spacing="30.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label fx:id="topLabel" text="Please Enter Your Name Below" textFill="WHITE">
               <font>
                  <Font name="Calibri" size="20.0" />
               </font></Label>
            <TextField fx:id="nameField" alignment="CENTER" style="-fx-background-color: #333333; -fx-border-color: #FFFFFF; -fx-border-radius: 5; -fx-text-fill: #FFFFFF;">
               <VBox.margin>
                  <Insets left="150.0" right="150.0" />
               </VBox.margin></TextField>
            <VBox fx:id="buttonStack" alignment="CENTER" prefHeight="126.0" prefWidth="500.0">
               <children>
                  <Button fx:id="startButton" mnemonicParsing="false" style="-fx-background-color: #333333; -fx-border-color: #FFFFFF; -fx-border-radius: 5; -fx-text-fill: #FFFFFF;" text="Start The Game" />
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
